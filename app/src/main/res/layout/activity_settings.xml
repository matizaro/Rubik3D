<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mycompany.myjpctapp.screens.SettingsActivity"
    android:background="@raw/bg_blur_small">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/LinearLayout15">

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backMennuButton3"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="35dp"
        android:textSize="25sp"
        android:background="@raw/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rotation Time"
        android:id="@+id/textView10"
        android:layout_marginTop="41dp"
        android:textSize="35sp"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="0"
            android:id="@+id/imageView"
            android:layout_below="@+id/textView10"
            android:layout_toLeftOf="@+id/backMennuButton3"
            android:layout_toStartOf="@+id/backMennuButton3"
            android:background="@raw/time_wall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="wall"
            android:id="@+id/textView5"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="120dp"
            android:textColor="#FFFFFF" />

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_column="2"
            android:layout_row="0"
            android:id="@+id/rotatingTImeText"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|right"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_column="3"
            android:layout_row="0"
            android:text="ms"
            android:id="@+id/textView11"
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView2"
            android:layout_above="@+id/backMennuButton3"
            android:layout_alignRight="@+id/backMennuButton3"
            android:layout_alignEnd="@+id/backMennuButton3"
            android:background="@raw/time_cube"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="cube"
            android:id="@+id/textView6"
            android:layout_row="1"
            android:layout_column="1"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/rotatingCubeTimeText"
            android:layout_weight="1"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center_vertical|right"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ms"
            android:id="@+id/textView12"
            android:layout_row="1"
            android:layout_column="3"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical" />
    </GridLayout>

</RelativeLayout>
