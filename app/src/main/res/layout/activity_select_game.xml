<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mycompany.myjpctapp.screens.SelectGameActivity"
    android:background="@raw/bg_small">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start new game"
        android:id="@+id/newGameButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@raw/button"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="resume game"
        android:id="@+id/resumeGameButton"
        android:layout_below="@+id/newGameButton"
        android:layout_alignRight="@+id/newGameButton"
        android:layout_alignEnd="@+id/newGameButton"
        android:layout_alignLeft="@+id/newGameButton"
        android:layout_alignStart="@+id/newGameButton"
        android:background="@raw/button"
        android:textSize="25sp"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backSelectButton"
        android:layout_below="@+id/resumeGameButton"
        android:layout_alignRight="@+id/resumeGameButton"
        android:layout_alignEnd="@+id/resumeGameButton"
        android:layout_alignLeft="@+id/resumeGameButton"
        android:layout_alignStart="@+id/resumeGameButton"
        android:background="@raw/button"
        android:textSize="25sp"
        android:layout_marginTop="5dp"/>

</RelativeLayout>
